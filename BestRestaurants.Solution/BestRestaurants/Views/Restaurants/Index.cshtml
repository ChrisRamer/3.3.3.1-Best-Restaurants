@{
	Layout ="_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
	<h3>You have not added any restaurants yet.</h3>
}

<ul>
	@foreach (Restaurant restaurant in Model)
	{
		<li>@restaurant.Name</li>
	}
</ul>

<p>@Html.ActionLink("Add a new restaurant", "Create")</p>
<p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>